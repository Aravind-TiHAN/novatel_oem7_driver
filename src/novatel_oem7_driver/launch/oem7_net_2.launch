<launch>

    <!-- ICOM connection to the receiver; you need to determine receiver's IP address -->
	<arg name="oem7_if"        default="Oem7ReceiverTcp" />
	<arg name="oem7_ip_addr"                             /> <!--  E.g. "10.128.224.1"  -->
	<arg name="oem7_port"      default="3001"            />

	<param name="oem7_msg/oem7_if"        value="$(arg oem7_if)"      type="string" />
	<param name="oem7_msg/oem7_ip_addr"   value="$(arg oem7_ip_addr)" type="string" />
	<param name="oem7_msg/oem7_port"      value="$(arg oem7_port)"    type="int" />
	
	<!-- Standard configuration, default oem7 components. -->
	<include file="$(find novatel_oem7_driver)/config/std_driver_config_2.xml"/> 

</launch>


